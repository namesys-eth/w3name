{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["esnext"],
      "types": ["node", "mocha"],
      "moduleResolution": "node",
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*", "test/**/*"]
  }
  